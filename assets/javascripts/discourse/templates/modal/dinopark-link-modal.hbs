{{#d-modal-body class="dinopark-link-modal"}}
  {{#if showingConfirm}}
    <h1>{{i18n 'dinopark.sign_up.confirm_title'}}</h1>
    <p>{{i18n 'dinopark.sign_up.confirm_description'}}</p>
  {{else}}
    <h1>{{i18n 'dinopark.sign_up.prompt_title'}}</h1>
    <p>{{i18n 'dinopark.sign_up.prompt_subtitle'}}</p>
    <p>{{i18n 'dinopark.sign_up.prompt_description'}}</p>
  {{/if}}
  <div class="dinopark-fields">
    <div>{{i18n 'dinopark.fields.username'}}:</div>
    <div class="value value-username">{{values.username}}</div>

    <div>{{i18n 'dinopark.fields.full_name'}}:</div>
    <div class="value value-name">{{values.full_name}}</div>

    <div>{{i18n 'dinopark.fields.pronouns'}}:</div>
    <div class="value value-pronouns">{{values.pronouns}}</div>

    <div>{{i18n 'dinopark.fields.fun_title'}}:</div>
    <div class="value value-title">{{values.fun_title}}</div>

    <div>{{i18n 'dinopark.fields.location'}}:</div>
    <div class="value value-location">{{values.location}}</div>

    <div>{{i18n 'dinopark.fields.description'}}:</div>
    <div class="value value-bio">{{cook-text values.description}}</div>
  </div>
  {{input type="checkbox" id="tos-checkbox" checked=tosChecked}}
  <label for="tos-checkbox">{{{i18n 'dinopark.sign_up.tos' tos_url=siteSettings.tos_url privacy_url=siteSettings.privacy_policy_url}}}</label>
{{/d-modal-body}}
<div class="modal-footer">
  {{#conditional-loading-spinner condition=submitted size="small"}}
    {{#if showingConfirm}}
      {{d-button label=(concat "dinopark." mode ".confirm") class=(concat "btn-primary " (unless tosChecked "disabled")) disabled=(unless tosChecked true) action=(action "confirm")}}
    {{else}}
      {{d-button label="dinopark.sign_up.continue" class=(concat "btn-primary " (unless tosChecked "disabled")) disabled=(unless tosChecked true) action=(action "findProfile")}}
    {{/if}}
    {{d-button label="dinopark.sign_up.cancel" action=(action "dismiss")}}
    {{#if isLogin}}
      <a {{action "dontShowAgain"}} role="button" class="d-modal-cancel">
        {{i18n "dinopark.login.dont_show_again"}}
      </a>
    {{/if}}
  {{/conditional-loading-spinner}}
</div>
